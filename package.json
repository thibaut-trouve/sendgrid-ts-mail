{
  "name": "sendgrid-ts-mail",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "type": "module",
  "main": "dist/sendgrid-ts-mail.cjs.js",
  "module": "dist/sendgrid-ts-mail.esm.js",
  "browser": "dist/sendgrid-ts-mail.umd.js",
  "typings": "dist/types/sendgrid-ts-mail.d.ts",
  "bin": {
    "sendgrid-ts-mail": "dist/cli.esm.js"
  },
  "files": [
    "dist"
  ],
  "author": "Thibaut Trouv√© <thibaut.trouve@epitech.eu>",
  "repository": {
    "type": "git",
    "url": ""
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rollup -c && touch dist/types/types.generated.d.ts",
    "start": "rollup -c -w",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.10",
    "coveralls": "^3.1.1",
    "eslint": "^8.53.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-config": "^29.7.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "rollup": "^4.3.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.3",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "@sendgrid/mail": "^7.7.0"
  },
  "dependencies": {
    "resolve-pkg": "^2.0.0"
  }
}
